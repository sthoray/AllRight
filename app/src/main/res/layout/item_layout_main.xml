<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewCategoryImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/unknownName"
        app:layout_constraintEnd_toEndOf="@+id/imageViewCategoryImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewCategoryImage"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCategoryImage"
        tools:text="Category Name" />

    <TextView
        android:id="@+id/textViewListingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/unknownName"
        app:layout_constraintEnd_toEndOf="@+id/textViewCategoryName"
        app:layout_constraintStart_toStartOf="@+id/textViewCategoryName"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategoryName"
        tools:text="Listing Count" />

</androidx.constraintlayout.widget.ConstraintLayout>