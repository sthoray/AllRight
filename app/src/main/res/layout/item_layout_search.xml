<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSearchImage"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@android:string/unknownName"
        app:layout_constraintStart_toEndOf="@+id/ivSearchImage"
        app:layout_constraintTop_toTopOf="@+id/ivSearchImage"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/tvSearchSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/unknownName"
        app:layout_constraintStart_toStartOf="@+id/tvSearchName"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchName"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/tvSearchPrice0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/unknownName"
        app:layout_constraintBottom_toBottomOf="@+id/ivSearchImage"
        app:layout_constraintStart_toStartOf="@+id/tvSearchSubtitle"
        tools:text="Price 0" />

    <TextView
        android:id="@+id/tvSearchPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@android:string/unknownName"
        app:layout_constraintBottom_toBottomOf="@+id/tvSearchPrice0"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Price 1" />

</androidx.constraintlayout.widget.ConstraintLayout>