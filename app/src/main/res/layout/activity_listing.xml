<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.listing.view.ListingActivity"
    tools:showIn="@layout/activity_listing">



    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:text="Title Goes Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        tools:ignore="ContentDescription"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/textViewSpecifics"
        android:layout_width="177dp"
        android:layout_height="182dp"
        android:layout_marginStart="48dp"
        android:text="Item Specifics go here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.243"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="177dp"
        android:layout_height="182dp"
        android:layout_marginStart="48dp"
        android:text="Item Description goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="1.0"
        tools:text="Subtitle" />

    <ImageView
        android:id="@+id/imageViewProductImage"
        android:layout_width="96dp"
        android:layout_height="447dp"
        android:layout_marginStart="292dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fillColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>